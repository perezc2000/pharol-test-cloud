{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@dto/*": ["src/dto/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@pipes/*": ["src/pipes/*"],
      "@schemas/*": ["src/schemas/*"]
    }

  },
  "exclude": ["node_modules", "dist"]
}
